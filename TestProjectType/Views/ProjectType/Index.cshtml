@model IEnumerable<TestProjectType.Models.ProjectType>

@{
    ViewData["Title"] = "Project Types";
}

<h1 class="display-4">Project Types</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
</p>

<table class="table table-striped table-bordered table-hover table-responsive">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="width: 150px;">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td  style="width: 150px;">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

    <style>
        .table {
            margin-top: 20px;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .table thead {
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
        }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

        .table td {
            word-wrap: break-word;
            max-width: 0;
        }

        .btn {
            border-radius: 20px;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
    </style>
